<!DOCTYPE html>
<html lang="en">
<head>

     <title>TOR Library</title>
     <meta charset="UTF-8">
     <meta http-equiv="X-UA-Compatible" content="IE=Edge">
     <meta name="description" content="">
     <meta name="keywords" content="">
     <meta name="author" content="">
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

     <link rel="stylesheet" href="/bootstrap.min.css">
     <link rel="stylesheet" href="/font-awesome.min.css">
     <link rel="stylesheet" href="/owl.carousel.css">
     <link rel="stylesheet" href="/owl.theme.default.min.css">

     <!-- MAIN CSS -->
     <link rel="stylesheet" href="/templatemo-style.css">

</head>
<body id="top" data-spy="scroll" data-target=".navbar-collapse" data-offset="50">

     <!-- PRE LOADER -->
     <section class="preloader">
          <div class="spinner">
               <span class="spinner-rotate"></span>
               
          </div>
     </section>


     <!-- MENU -->
     <section class="navbar custom-navbar navbar-fixed-top" role="navigation">
          <div class="container">

               <div class="navbar-header">
                    <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                         <span class="icon icon-bar"></span>
                         <span class="icon icon-bar"></span>
                         <span class="icon icon-bar"></span>
                    </button>

                    <!-- lOGO TEXT HERE -->
                    <a href="#" class="navbar-brand">TOR Library</a>
               </div>

               <!-- MENU LINKS -->
               <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-nav-first">
                         <li><a href="/member/<%= id %>/<%= name %>" class="smoothScroll">Home</a></li>
                         <li><a href="/member/<%= id %>/<%= name %>#courses" class="smoothScroll">New Arrivals</a></li>
                         <li><a href="/member/<%= id %>/<%= name %>#Picks" class="smoothScroll">Your Picks</a></li>
                         <li><a href="/member/<%= id %>/<%= name %>#Search" class="smoothScroll">Search</a></li>
                         <li><a href="/member/<%= id %>/<%= name %>#Feedback" class="smoothScroll">Feedback</a></li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                         <!-- <li><a href="#"><i class="fa fa-phone"></i> +65 2244 1100</a></li> -->
                         <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"> <span class="nav-label"><%= name%></span> <span class="caret"></span></a>
                              <ul class="dropdown-menu">
                                   <li><a href="/maccount/<%= id %>" class="smoothScroll">Account</a></li>
                                   <li><a href="/signout/<%= id %>/1" class="smoothScroll">Sign Out</a></li>
                              </ul>
                         </li>
                    </ul>
               </div>
          </div>
     </section>

     <!-- FEATURE -->
     <section id="feature">
          <div class="container">
               <div class="feature-thumb">
                    <%  if (clicked === '1') { %>
                         <h3> Dues Updated</h3>
                    <% } else if (clicked === '0' ) { %>
                         <h3>Enter Details...</h3>
                    <% } %>
                    <form method="POST" action="/clearDuesdone">
                    <input style="text-align: center; margin-left: 5px;" type="text" id="M_ID" name="M_ID" value="<%= id%>" readonly hidden> 
                    <h3>Name:<input style="text-align: center; margin-left: 16px;" type="text" id="Name" name="Name" value="<%= name%>" readonly> </h3> 
                    <h3>Dues: <input style="text-align: center; margin-left: 20px;" type="text" id="Dues" name="Dues" value="<%= dues %>" readonly>  </h3>
                    <h3>To Pay: <input style="text-align: center; margin-left: 3px;" type="number" id="Amount" name="Amount" value="0.0" required>  </h3>
                    <h3><label for="T_ID">Using</label></h3>
                              <select id="T_ID" name="T_ID" required>
                                        <option value="1">Visa</option>
                                        <option value="2">Mastercard</option>
                                        <option value="3">American express</option>
                              </select>
                    <%  if (clicked === '1') { %>
                         <p><i> DONE</i></p>
                    <% } else if (clicked === '0' ) { %>
                         <p><button type="submit" class="submit-btn form-control" id="form-submit"  style="width: 100px;">Confirm</button></p>
                    <% } %>
               </form>
               <a href="/maccount/<%= id %>"><button class="submit-btn form-control" id="form-submit"  style="width: 100px;">< Back</button></a> 
               </div>
          </div>
     </section>



    

     <%- include('footer.ejs') %>


     <!-- SCRIPTS -->
     <script src="/jquery.js"></script>
     <script src="/bootstrap.min.js"></script>
     <script src="/owl.carousel.min.js"></script>
     <script src="/smoothscroll.js"></script>
     <script src="/custom.js"></script>

</body>
</html>