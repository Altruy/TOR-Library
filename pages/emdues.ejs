</head>
<body id="top" data-spy="scroll" data-target=".navbar-collapse" data-offset="50">

     <!-- PRE LOADER -->
     <section class="preloader">
          <div class="spinner">
               <span class="spinner-rotate"></span>
               
          </div>
     </section>


     <!-- MENU -->
     <section class="navbar custom-navbar navbar-fixed-top" role="navigation">
          <div class="container">

               <div class="navbar-header">
                    <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                         <span class="icon icon-bar"></span>
                         <span class="icon icon-bar"></span>
                         <span class="icon icon-bar"></span>
                    </button>

                    <!-- lOGO TEXT HERE -->
                    <a href="#" class="navbar-brand">TOR Library</a>
               </div>

               <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-nav-first">
                         <li><a href="/finance/<%= id %>/<%= name %>#top" class="smoothScroll">Home</a></li>
                         <li><a href="/finance/<%= id %>/<%= name %>#feature" class="smoothScroll">Employee Dues</a></li>
                         <li><a href="/finance/<%= id %>/<%= name %>#member" class="smoothScroll">Member Dues</a></li>
                         <li><a href="/finance/<%= id %>/<%= name %>#transactions" class="smoothScroll">Transactions</a></li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                         <!-- <li><a href="#"><i class="fa fa-phone"></i> +65 2244 1100</a></li> -->
                         <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"> <span class="nav-label"><%= name%></span> <span class="caret"></span></a>
                              <ul class="dropdown-menu">
                                   <li><a href="/faccount/<%= id %>" class="smoothScroll">Account</a></li>
                                   <li><a href="/signout/<%= id %>/0" class="smoothScroll">Sign Out</a></li>
                              </ul>
                          </li>
                         
                    </ul>
               </div>
          </div>
     </section>

     <!-- FEATURE -->
     <section id="feature">
          <div class="container">
               <div class="feature-thumb">
               <form action="/emduesdone/<%=id %>/<%= name%>" method="POST">
                    <%  if (clicked === '2') { %>
                         <h2>Error!</h2>
                    <% } else if (clicked === '0') { %>
                         <h2>Enter Details..</h2>
                    <% } else { %>
                         <h2>Dues Updated</h2>
                    <% } %>
                    <input style="text-align: center; margin-left: 39px;" type="text" id="M_ID" name="M_ID" value="<%= rows.M_ID %>" readonly hidden>
                    <h3>Name:<input style="text-align: center; margin-left: 16px;" type="text" id="Name" name="Name" value="<%= rows.Name%>" readonly> </h3> 
                    <h3>Dues: <input style="text-align: center; margin-left: 20px;" type="text" id="Dues" name="Dues" value="<%= rows.Dues %>" readonly>  </h3>
                    <h3>To Pay: <input style="text-align: center; margin-left: 3px;" type="number" id="Amount" name="Amount" value="0.0" required>  </h3>
                    <h3><label for="T_ID">Using</label></h3>
                              <select id="T_ID" name="T_ID" required>
                                        <option value="1">Visa</option>
                                        <option value="2">Mastercard</option>
                                        <option value="3">American express</option>
                              </select>
                    <%  if (clicked === '1') { %>
                         <p><i> EDIT DONE</i></p>
                    <% } else if (clicked === '2' ) { %>
                         <p><i> Error, Please enter valid, positive Price and quantity </i></p>
                    <% } else  { %>
                         <p><button type="submit" class="submit-btn form-control" id="form-submit"  style="width: 100px;">Confirm</button></p>
                 
                    <% } %>
               </form>
               <a href="/finance/<%= id %>/<%= name %>#member"><button class="submit-btn form-control" id="form-submit"  style="width: 100px;">< Back</button></a> 
     
               </div>
          </div>
          </section>
     


    

          <%- include('footer.ejs') %>


     <!-- SCRIPTS -->
     <script src="/jquery.js"></script>
     <script src="/bootstrap.min.js"></script>
     <script src="/owl.carousel.min.js"></script>
     <script src="/smoothscroll.js"></script>
     <script src="/custom.js"></script>

</body>
</html>