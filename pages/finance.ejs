<!DOCTYPE html>
<html lang="en">
<head>

     <title>TOR Library</title>
     <meta charset="UTF-8">
     <meta http-equiv="X-UA-Compatible" content="IE=Edge">
     <meta name="description" content="">
     <meta name="keywords" content="">
     <meta name="author" content="">
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

     <link rel="stylesheet" href="/bootstrap.min.css">
     <link rel="stylesheet" href="/font-awesome.min.css">
     <link rel="stylesheet" href="/owl.carousel.css">
     <link rel="stylesheet" href="/owl.theme.default.min.css">

     <!-- MAIN CSS -->
     <link rel="stylesheet" href="/templatemo-style.css">

</head>
<body id="top" data-spy="scroll" data-target=".navbar-collapse" data-offset="50">

     <!-- PRE LOADER -->
     <section class="preloader">
          <div class="spinner">
               <span class="spinner-rotate"></span>
               
          </div>
     </section>


     <!-- MENU -->
     <section class="navbar custom-navbar navbar-fixed-top" role="navigation">
          <div class="container">

               <div class="navbar-header">
                    <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                         <span class="icon icon-bar"></span>
                         <span class="icon icon-bar"></span>
                         <span class="icon icon-bar"></span>
                    </button>

                    <!-- lOGO TEXT HERE -->
                    <a href="#" class="navbar-brand">TOR Library</a>
               </div>

               <!-- MENU LINKS -->
               <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-nav-first">
                         <li><a href="#top" class="smoothScroll">Home</a></li>
                         <li><a href="#feature" class="smoothScroll">Employee Dues</a></li>
                         <li><a href="#member" class="smoothScroll">Member Dues</a></li>
                         <li><a href="#transactions" class="smoothScroll">Transactions</a></li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                         <!-- <li><a href="#"><i class="fa fa-phone"></i> +65 2244 1100</a></li> -->
                         <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"> <span class="nav-label"><%= name%></span> <span class="caret"></span></a>
                              <ul class="dropdown-menu">
                                   <li><a href="/faccount/<%= E_ID %>" class="smoothScroll">Account</a></li>
                                   <li><a href="/signout/<%= E_ID %>/0" class="smoothScroll">Sign Out</a></li>
                              </ul>
                          </li>
                         
                    </ul>
               </div>

          </div>
     </section>


     <!-- HOME -->
     <section id="home">
          <div class="row">

                    <div class="owl-carousel owl-theme home-slider">
                         <div class="item item-first">
                              <div class="caption">
                                   <div class="container">
                                        <div class="col-md-6 col-sm-12">
                                             <h1>Minimum Human Interaction Library Portal</h1>
                                             <h3>Our online Portal provides you with all possible library features to keep huuman interaction at a bare minimum.</h3>
                                             <a href="#feature" class="section-btn btn btn-default smoothScroll">Discover more</a>
                                        </div>
                                   </div>
                              </div>
                         </div>

                         <div class="item item-second">
                              <div class="caption">
                                   <div class="container">
                                        <div class="col-md-6 col-sm-12">
                                             <h1>Start Exploring Our Vast Treasure of Literary Works</h1>
                                             <a href="#Search" class="section-btn btn btn-default smoothScroll">Search Our Library</a>
                                        </div>
                                   </div>
                              </div>
                         </div>

                         <div class="item item-third">
                              <div class="caption">
                                   <div class="container">
                                        <div class="col-md-6 col-sm-12">
                                             <h1>Efficient Method to keep track of your picks</h1>
                                             <h3>Keeping Track of your Issued literary Works has never been easier... </h3>
                                             <a href="#Pickss" class="section-btn btn btn-default smoothScroll">Check out Your Picks</a>
                                        </div>
                                   </div>
                              </div>
                         </div>
                    </div>
          </div>
     </section>

     <!-- FEATURE -->
     <section id="feature">
          <div class="container">
               <div class="feature-thumb">
               <form action="/edues/<%= E_ID %>/<%= name %>/0" method="post">
                    <h2>Clear Employee dues</h2>
                    <h3>    <label for="employee">Choose an Employee:</label></h3>
                              <select id="employee" name="employee" required>
                                   <% rows.forEach (row => { %>
                                        <option value="<%= row.E_ID %>"><%= row.E_Name %></option>
                                   <% }) %>
                              </select>
                              <p><button type="submit" class="submit-btn form-control" id="form-submit"  style="width: 100px;">Go</button></p>
               </form>
               </div>
          </div>
          <style></style>
          </section>
     
          <!-- FEATURE -->
          <section id="member">
               <div class="container">
                    <div class="feature-thumb">
                    <form action="/emdues/<%= E_ID %>/<%= name %>/0" method="post">
                         <h2>Clear Member dues</h2>
                         <h3>    <label for="member">Choose a Member:</label></h3>
                                   <select id="member" name="member" required>
                                        <% rowss.forEach (row => { %>
                                             <option value="<%= row.M_ID %>"><%= row.Name %></option>
                                        <% }) %>
                                   </select>
                                   <p><button type="submit" class="submit-btn form-control" id="form-submit"  style="width: 100px;">Go</button></p>
                    </form>
               </div>
          </div>
          <style></style>
          </section>

          <!-- FEATURE -->
          <section id="transactions">
               <div class="container">
                    <div class="feature-thumb">
                    <h2>View Transactions</h2>
                    <form action="/trans/<%= E_ID %>/<%= name %>/0" method="post">
                         <h3>    <label for="date">Choose a Date :</label></h3>
                         <input type="date" id="date" name="date">
                         <p><button type="submit" class="submit-btn form-control" id="form-submit"  style="width: 100px;">Go</button></p>
                    </form>
                    <form action="/trans/<%= E_ID %>/<%= name %>/1" method="post">
                         <h3>    <label for="month">Choose a Month :</label></h3>
                         <input type="month" id="date" name="date">
                         <p><button type="submit" class="submit-btn form-control" id="form-submit"  style="width: 100px;">Go</button></p>
                    </form>
               </div>
          </div>
          <style></style>
          </section>


     



      


     <%- include('footer.ejs') %>


     <!-- SCRIPTS -->
     <script src="/jquery.js"></script>
     <script src="/bootstrap.min.js"></script>
     <script src="/owl.carousel.min.js"></script>
     <script src="/smoothscroll.js"></script>
     <script src="/custom.js"></script>

</body>
</html>