                              <% } else { %>
                              <form action="signin" method="post">
                                   <% if(clicked===0) { %>
                                   <h2>Sign-In</h2>
                                   <% } else if (clicked===1) { %>
                                        <h2>InCorrect Credentials</h2>
                                        <h2>Please Try again</h2>
                                   <% } else if (clicked===2) { %>
                                        <h2>You're Cancelled</h2>
                                        <h2>Try other Credentials</h2>
                                   <% } %>
                                   <input type="text" name="ID" class="form-control" placeholder="Your ID" required="">

                                   <input type="password" name="password" class="form-control" placeholder="Your password" required="">
                                   
                                   <input type="radio" id="Employee" name="person_type" value="Employee" style="margin-left: 16.795px ;">
