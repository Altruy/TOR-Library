                                   <input type="radio" id="Member" name="person_type" value = "Member">
                                   <label for="Member" style="color: #555;">I am a Member</label><br>

                                   <button class="submit-btn form-control" id="form-submit">Go</button>
                              </form>
                              <% } %>
