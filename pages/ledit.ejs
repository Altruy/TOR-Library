     <link rel="stylesheet" href="/bootstrap.min.css">
     <link rel="stylesheet" href="/font-awesome.min.css">
     <link rel="stylesheet" href="/owl.carousel.css">
     <link rel="stylesheet" href="/owl.theme.default.min.css">

     <!-- MAIN CSS -->
     <link rel="stylesheet" href="/templatemo-style.css">

</head>
<body id="top" data-spy="scroll" data-target=".navbar-collapse" data-offset="50">

     <!-- PRE LOADER -->
     <section class="preloader">
          <div class="spinner">
               <span class="spinner-rotate"></span>
               
          </div>
     </section>


     <!-- MENU -->
     <section class="navbar custom-navbar navbar-fixed-top" role="navigation">
          <div class="container">

               <div class="navbar-header">
                    <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                         <span class="icon icon-bar"></span>
                         <span class="icon icon-bar"></span>
                         <span class="icon icon-bar"></span>
                    </button>

                    <!-- lOGO TEXT HERE -->
                    <a href="#" class="navbar-brand">TOR Library</a>
               </div>

               <!-- MENU LINKS -->
               <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-nav-first">
                         <li><a href="/librarian/<%= id %>/<%= name %>" class="smoothScroll">Home</a></li>
                         <li><a href="/librarian/<%= id %>/<%= name %>#feature" class="smoothScroll">Add New</a></li>
                         <li><a href="/librarian/<%= id %>/<%= name %>#Search" class="smoothScroll">Edit/Remove</a></li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                         <!-- <li><a href="#"><i class="fa fa-phone"></i> +65 2244 1100</a></li> -->
                         <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"> <span class="nav-label"><%= name%></span> <span class="caret"></span></a>
                              <ul class="dropdown-menu">
                                   <li><a href="/laccount/<%= id %>" class="smoothScroll">Account</a></li>
                                   <li><a href="/signout/<%= id %>/0" class="smoothScroll">Sign Out</a></li>
                              </ul>
                         </li>
                    </ul>
               </div>
          </div>
     </section>

     <!-- FEATURE -->
     <section id="feature">
          <div class="container">
               <div class="feature-thumb">
               <form action="/editdone" method="POST">
                    <%  if (clicked === '2') { %>
                         <h2>Error!</h2>
                    <% } else if (clicked === '0') { %>
                         <h2>Do you wish to Edit?</h2>
                    <% } else { %>
                         <h2>Editted...</h2>
                    <% } %>
                    <input style="text-align: center; margin-left: 39px;" type="text" id="E_ID" name="E_ID" value="<%= id %>" readonly hidden>
                    <h3>LITERATURE ID: <input style="text-align: center; margin-left: 39px;" type="text" id="L_ID" name="L_ID" value="<%= L_ID %>" readonly> </h3>
                    <h3>LITERATURE Name: <input style="text-align: center; margin-left: 2px;" type="text" id="LName" name="LName" value="<%= LName %>" required></h3>
                    <h3>LITERATURE Price: <input style="text-align: center; margin-left: 11px;" type="text" id="Price" name="Price" value="<%= Price %>" required></h3>
                    <h3>Available copies: <input style="text-align: center; margin-left: 32px;" type="text" id="Available" name="Available" value="<%= Available %>" required></h3>
                    <p><i> Floats in the above input will be floored</i></p>
                    <%  if (clicked === '1') { %>
                         <p><i> EDIT DONE</i></p>
                    <% } else if (clicked === '2' ) { %>
                         <p><i> Error, Please enter valid, positive Price and quantity </i></p>
                    <% } else  { %>
                         <p><button type="submit" class="submit-btn form-control" id="form-submit"  style="width: 100px;">Confirm</button></p>
                 
                    <% } %>
               </form>
               <a href="/librarian/<%= id %>/<%= name %>#Search"><button class="submit-btn form-control" id="form-submit"  style="width: 100px;">< Back</button></a> 
     
               </div>
          </div>
          </section>
     


    

          <%- include('footer.ejs') %>


     <!-- SCRIPTS -->
     <script src="/jquery.js"></script>
     <script src="/bootstrap.min.js"></script>
     <script src="/owl.carousel.min.js"></script>
     <script src="/smoothscroll.js"></script>
     <script src="/custom.js"></script>

</body>
</html>