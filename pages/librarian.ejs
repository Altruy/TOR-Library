     <!-- FEATURE -->
     <section id="feature">
          <div class="container">
               <div class="feature-thumb">
               <form action="/addnew/<%= E_ID %>/<%= name %>/0" method="post">
                    <h2>Do you wish to Add a new work?</h2>
                    <h3>LITERATURE Name: <input style="text-align: center; margin-left: 2px;" type="text" id="LName" name="LName" value="" required></h3>
                    <h3>LITERATURE Price: <input style="text-align: center; margin-left: 11px;" type="text" id="Price" name="Price" value="" required></h3>
                    <h3>Available copies: <input style="text-align: center; margin-left: 32px;" type="text" id="Available" name="Available" value="" required></h3>
                    <p><button type="submit" class="submit-btn form-control" id="form-submit"  style="width: 100px;">Confirm</button></p>
                 
               </form>
               </div>
          </div>
          <style></style>
          </section>
     



     


     <!-- Search -->
     <section id="Search">
          <div class="container" style="height: 700px;">
               <div class="search-form" >
               <form  method="post" action="/edit-req/<%= E_ID %>/<%= name%>">
                    <h2 >Search for Literary Work(s) to Edit:</h2>
                    <input type="text" style="color: white;" name="key_word" class="search-control" placeholder="  Enter Author / Title Keyword(s)"  >
                    
                    <h2 style="margin-top: 30px;">Category:</h2>
                    <input type="radio" id="Newsletter" name="Category" value="Newsletter" style=" -webkit-transform: scale(1.8);" required="">
                    <label for="Newsletter" style="color: rgb(255, 255, 255);font-size: 20px;padding-left:1% ;padding-right: 2%;">Newsletter</label>
                    <input type="radio" id="Journal" name="Category" value="Journal" style="margin-left: 1.795px ;-webkit-transform: scale(1.8);" required="">
                    <label for="Journal" style="color: rgb(255, 255, 255);font-size: 20px;padding-left:1%;padding-right: 2%;">Journal</label>
                    <input type="radio" id="Book" name="Category" value="Book" style="margin-left: 1.795px ;-webkit-transform: scale(1.8);" required="">
                    <label for="Book" style="color: rgb(255, 255, 255);font-size: 20px;padding-left:1%;padding-right: 2%;" >Book</label>
                    <input type="radio" id="Article" name="Category" value = "Article" style="-webkit-transform: scale(1.8);" required="">
                    <label for="Article" style="color: rgb(255, 255, 255);font-size: 20px;padding-left:1%;padding-right: 2%;">Article</label>
              
                    <h2 style="margin-top: 30px;">Genre(s):</h2>
                    <div>
                        
                       
                         <input type="checkbox" id="Film-Noir" name="Genre" value="Film-Noir" style="margin-left: 1.795px ;-webkit-transform: scale(1.5);">
                         <label for="Film-Noir" style="color: rgb(255, 255, 255);font-size: 20px;padding-right: 1%;padding-left: 1.2%;">Film-Noir</label>
                    
                         <input type="checkbox" id="Thriller" name="Genre" value="Thriller" style="margin-left: 1.795px ;-webkit-transform: scale(1.5);">
                         <label for="Thriller" style="color: rgb(255, 255, 255);font-size: 20px;padding-right: 1%;padding-left: 1.2%;">Thriller</label>
                         <input type="checkbox" id="Western" name="Genre" value="Western" style="margin-left: 1.795px ;-webkit-transform: scale(1.5);">
                         <label for="Western" style="color: rgb(255, 255, 255);font-size: 20px;padding-right: 1%;padding-left: 1.2%;">Western</label>
                         <input type="checkbox" id="Fantasy" name="Genre" value="Fantasy" style="margin-left: 1.795px ;-webkit-transform: scale(1.5);">
                         <label for="Fantasy" style="color: rgb(255, 255, 255);font-size: 20px;padding-right: 1%;padding-left: 1.2%;">Fantasy</label>
                    
                         <input type="checkbox" id="Horror" name="Genre" value="Horror" style="margin-left: 1.795px ;-webkit-transform: scale(1.5);">
                         <label for="Horror" style="color: rgb(255, 255, 255);font-size: 20px;padding-right: 1%;padding-left: 1.2%;">Horror</label><br>
                         <input type="checkbox" id="Action" name="Genre" value="Action" style="margin-left: 1.795px ;-webkit-transform: scale(1.5);">
                         <label for="Action" style="color: rgb(255, 255, 255);font-size: 20px;padding-right: 1%;padding-left: 1%;">Action</label>
                         <input type="checkbox" id="Comedy" name="Genre" value="Comedy" style="margin-left: 1.795px ;-webkit-transform: scale(1.5);">
                         <label for="Comedy" style="color: rgb(255, 255, 255);font-size: 20px;padding-right: 1%;padding-left: 1.2%;">Comedy</label>
                         <input type="checkbox" id="Drama" name="Genre" value="Drama" style="margin-left: 1.795px ;-webkit-transform: scale(1.5);">
                         <label for="Drama" style="color: rgb(255, 255, 255);font-size: 20px;padding-right: 1%;padding-left: 1.2%;">Drama</label>
                        


                         <input type="checkbox" id="Romance" name="Genre" value="Romance" style="margin-left: 1.795px ;-webkit-transform: scale(1.5);">
                         <label for="Romance" style="color: rgb(255, 255, 255);font-size: 20px;padding-right: 1.9%;padding-left: 1.2%;">Romance</label>
                    
                         <input type="checkbox" id="War" name="Genre" value="War" style="margin-left: 1.795px ;-webkit-transform: scale(1.5);">
                         <label for="War" style="color: rgb(255, 255, 255);font-size: 20px;padding-right: 1%;padding-left: 1.2%;">War</label>
                         
                         
                    </div><br>
                    <button class="submit-btn form-control" id="form-submit" style="font-size: larger; width: 250px;" >Let's Go!</button>
               </form>
           </div>
