<!DOCTYPE html>
<html lang="en">
<head>

     <title>TOR Library</title>
     <meta charset="UTF-8">
     <meta http-equiv="X-UA-Compatible" content="IE=Edge">
     <meta name="description" content="">
     <meta name="keywords" content="">
     <meta name="author" content="">
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

     <link rel="stylesheet" href="/bootstrap.min.css">
     <link rel="stylesheet" href="/font-awesome.min.css">
     <link rel="stylesheet" href="/owl.carousel.css">
     <link rel="stylesheet" href="/owl.theme.default.min.css">

     <!-- MAIN CSS -->
     <link rel="stylesheet" href="/templatemo-style.css">
     <link rel="stylesheet" href="/vendor.css">

</head>
<body id="top" data-spy="scroll" data-target=".navbar-collapse" data-offset="50">

     <!-- PRE LOADER -->
     <section class="preloader">
          <div class="spinner">
               <span class="spinner-rotate"></span>
               
          </div>
     </section>


     <!-- MENU -->
     <section class="navbar custom-navbar navbar-fixed-top" role="navigation">
          <div class="container">

               <div class="navbar-header">
                    <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                         <span class="icon icon-bar"></span>
                         <span class="icon icon-bar"></span>
                         <span class="icon icon-bar"></span>
                    </button>

                    <!-- lOGO TEXT HERE -->
                    <a href="#" class="navbar-brand">TOR Library</a>
               </div>

               <!-- MENU LINKS -->
               <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-nav-first">
                         <li><a href="/member/<%= id %>/<%= name %>" class="smoothScroll">Home</a></li>
                         <li><a href="/member/<%= id %>/<%= name %>#courses" class="smoothScroll">New Arrivals</a></li>
                         <li><a href="/member/<%= id %>/<%= name %>#Picks" class="smoothScroll">Your Picks</a></li>
                         <li><a href="/member/<%= id %>/<%= name %>#Search" class="smoothScroll">Search</a></li>
                         <li><a href="/member/<%= id %>/<%= name %>#Feedback" class="smoothScroll">Feedback</a></li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                         <!-- <li><a href="#"><i class="fa fa-phone"></i> +65 2244 1100</a></li> -->
                         <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"> <span class="nav-label"><%= name%></span> <span class="caret"></span></a>
                              <ul class="dropdown-menu">
                                   <li><a href="/maccount/<%= id %>" class="smoothScroll">Account</a></li>
                                   <li><a href="/signout/<%= id %>/1" class="smoothScroll">Sign Out</a></li>
                              </ul>
                         </li>
                    </ul>
               </div>
          </div>
     </section>

     <!-- FEATURE -->
     <section id="feature">
               <div class="feature-thumb">
                         <h2>Search Result</h2>
                         <ul class="responsive-table">
                           <li class="table-header">
                             <div class="col col-1">L ID</div>
                             <div class="col col-2">Name</div>
                             <div class="col col-3">Author</div>
                             <div class="col col-4">Genre</div>
                             <div class="col col-5">Available</div>
                             <div class="col col-6">Price</div>
                             <div class="col col-7">Check</div>
                           </li>
                           <% if(rows.length === 0) { %>
                              <h3>No Results found. Please try again</h3>
                              <br/>

                         <% } else { %>
                           <% rows.forEach (row => { %>
                                   <li>
                                        <div class="col col-1" data-label="L_ID"><%= row.L_ID %></div>
                                        <div class="col col-2" data-label="Name"><%= row.Name %></div>
                                        <div class="col col-3" data-label="Author"><%= row.NAME %></div>
                                        <div class="col col-4" data-label="Genre"><%= row.Genre %></div>
                                        <div class="col col-5" data-label="Availavle"><%= row.Available %></div>
                                        <div class="col col-6" data-label="Price"><%= row.Price %></div>
                                        <% if (row.Available!==0) { %>
                                             <div class="col col-7" data-label="button"><a href="/mborrow/<%= id %>/<%= row.L_ID %>/0"><button class="submit-btn form-control" id="form-submit"  style="width: 100px;" method="POST">Borrow</button></a></div>
                                        <% } else { %>
                                             <div class="col col-7" data-label="button"><button class="submit-btn form-control" id="form-submit"  style="width: 100px;">Not Avl</button></div>
                                        <% } %>
                                   </li>
                         <% })} %>
                         <a href="/member/<%= id %>/<%= name %>#Search"><button class="submit-btn form-control" id="form-submit"  style="width: 100px;">< Back</button></a>
                          
               </div>    
     </section>



    

     <%- include('footer.ejs') %>


     <!-- SCRIPTS -->
     <script src="/jquery.js"></script>
     <script src="/bootstrap.min.js"></script>
     <script src="/owl.carousel.min.js"></script>
     <script src="/smoothscroll.js"></script>
     <script src="/custom.js"></script>

</body>
</html>